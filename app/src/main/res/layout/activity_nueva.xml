<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevaActivity">


    <Button
        android:id="@+id/BCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="128dp"
        android:text="Cerrar sesion"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <EditText
     android:id="@+id/Id"
     android:layout_width="249dp"
     android:layout_height="34dp"
     android:background="#BDBDBD"
     android:ems="10"
     android:hint="Id"
     app:layout_constraintBottom_toTopOf="@+id/marca"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.497"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="1.0" />

 <EditText
     android:id="@+id/modelo"
     android:layout_width="245dp"
     android:layout_height="41dp"
     android:background="#BDBDBD"
     android:ems="10"
     android:hint="Modelo"
     android:inputType="textPersonName"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/marca" />


 <EditText
     android:id="@+id/marca"
     android:layout_width="250dp"
     android:layout_height="36dp"
     android:layout_marginTop="284dp"
     android:background="#BDBDBD"
     android:ems="10"
     android:hint="Marca"
     android:inputType="textPersonName"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.502"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <EditText
     android:id="@+id/color"
     android:layout_width="244dp"
     android:layout_height="38dp"
     android:background="#BDBDBD"
     android:ems="10"
     android:hint="Color"
     android:inputType="textPersonName"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.497"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/modelo" />

 <Button
     android:id="@+id/guardarzapa"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="64dp"
     android:text="Guardar Zapatilla"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.49"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/color" />

 <Button
     android:id="@+id/eliminarzapa"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="12dp"
     android:text="Eliminar Zapatilla"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.493"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/editarzapa" />

 <Button
     android:id="@+id/editarzapa"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="24dp"
     android:text="Editar Zapatilla"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/guardarzapa" />

</androidx.constraintlayout.widget.ConstraintLayout>